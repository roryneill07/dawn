<header class="bg-secondary py-2 lg:pb-3 text-white">
  <div class=" flex flex-row container justify-between items-center">
    <div class="block lg:hidden">
      <div class="flex flex-row">
        <div>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-9 m-2"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </div>
        <div>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-9 m-2"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
          </svg>
        </div>
      </div>
    </div>
    <a href="{{ routes.root_url }}" class="hover:cursor-pointer"
      ><img src="{{ "logo.svg" | asset_url }}" alt="Tyre Supplies Logo" width="150px" height="auto"
    ></a>
    {% comment %} Search {% endcomment %}
    <div class="hidden lg:block">
      <form
        id="searchForm"
        action="{{ routes.search_url }}"
        method="get"
        class="flex bg-white rounded overflow-hidden px-8 text-secondary"
        autocomplete="off"
        onchange="predictiveSearch()"
      >
        <input
          type="text"
          name="q"
          value="{{ search.terms | escape }}"
          id="search"
          placeholder="Search our store..."
          class="h-full py-4 w-96 outline-none text-sm"
        >
        <div class="flex items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-6"
          >
            <path stroke-linecap="round" stroke-linejoin="round"
              d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
          </svg>
        </div>
      </form>
      <div class="absolute">
        <div
          id="searchContainer"
          class="relative top-3 left-0 bg-white rounded p-4 shadow text-secondary z-50"
        >
          <div id="searchResults"></div>
        </div>
      </div>
    </div>

    {% comment %} Endsearch {% endcomment %}
    <div class="flex flex-row">
      <div class="text-center px-2 hover:cursor-pointer hover:underline">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-9 m-2"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
        </svg>
        {% comment %} Customer account login change to my acconunt when signed in {% endcomment %}
        <div class="text-xs font-semibold hidden lg:block">Sign In</div>
      </div>
      <div onclick="toggleSlideoverCart()" class="text-center pl-2 hover:cursor-pointer hover:underline">
        <div class="absolute">
          <div
            id="counter"
            class="size-6 bg-primary rounded-full flex ml-8 justify-center items-center text-sm text-secondary"
          >
            {{ cart.item_count }}
          </div>
        </div>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-9 m-2"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
        </svg>

        <div class="text-xs font-semibold hidden lg:block">Cart</div>
      </div>
    </div>
  </div>
  <div class="hidden lg:block">
    <div class="container text-white pt-3 flex justify-between items-center">
      {% comment %} Links {% endcomment %}
      <ul class="flex uppercase font-bold justify-center relative">
