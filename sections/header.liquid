{% comment %} Slideover Cart {% endcomment %}
<div id="slideoverCart" class="fixed top-0 right-0 h-full w-96 bg-white hidden py-2 px-4">
  {% comment %} Cart Header {% endcomment %}
  <div class="flex justify-between items-center">
    <h4 class="font-bold text-lg">Shopping Cart</h4>
    <div class="p-2 hover:cursor-pointer" onclick="toggleSlideoverCart()">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="size-10"
      >
        <path fill-rule="evenodd" d="M5.47 5.47a.75.75 0 0 1 1.06 0L12 10.94l5.47-5.47a.75.75 0 1 1 1.06 1.06L13.06 12l5.47 5.47a.75.75 0 1 1-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 0 1-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
      </svg>
    </div>
  </div>
  <div id="cart-counter">{{ cart.item_count }} items</div>
  {% if cart.empty? %}
    Continue Shopping button
    {% comment %} TODO {% endcomment %}
  {% else -%}
    <div class="h-2 bg-secondary rounded-full overflow-hidden">
      <div
        class="bg-lime-500 h-full"
        style="width:{{- cart.total_price | divided_by: 19900.0 | round: 2 | times: 100 }}%"
      ></div>
    </div>
    {% if cart.total_price >= 19900 -%}
      <div class="text-lime-600">You qualify for free shipping!</div>
    {% else %}
      <div>Spend {{ cart.total_price | minus: 19900 | abs | money }} more to get free shipping!</div>
    {% endif %}
    {% for item in cart.items %}
      <div class="flex">
        <div class="flex items-center">
          {{ item.image | image_url: width: 100 | image_tag }}
        </div>
        <div class="p-2">
          <div class="text-sm">
            {{ item.product.title }}
          </div>
          <span class="text-grey-2 text-sm">Variant: {{ item.variant.title }}</span>
          <div class="font-bold">{{ item.final_price | money }}</div>
          <div class="flex flex-row justify-between">
            <div>Quantity: {{ item.quantity }}</div>
            <button data-cart-remove-variant="{{ item.id }}">Remove</button>
          </div>
        </div>
      </div>
    {% endfor %}

    {% comment %} Cart footer {% endcomment %}
    <div class="mt-4">
      <div class="flex justify-between items-center">
        <div class="font-bold">Subtotal</div>
        <div class="text-right">
          <div class="text-lg font-bold">{{ cart.total_price | money }}</div>
          <div class="text-sm">(Includes GST of {{ cart.total_price | times: 0.1304347826 | round | money }})</div>
        </div>
      </div>
      <button class="w-full bg-primary text-secondary font-bold rounded p-3 mt-2">CHECKOUT</button>
      <button class="w-full border border-secondary text-secondary font-bold rounded p-3 mt-2">VIEW CART</button>
    </div>
  {% endif %}
</div>
