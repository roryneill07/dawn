<main class="container">
  <!-- Breadcrumb -->
  <nav>
    <ol class="space-x-3 py-5 flex items-center text-sm flex-wrap">
      <div>Home</div>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2.5"
        stroke="currentColor"
        class="size-4 text-grey"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
      </svg>

      <div>Products</div>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2.5"
        stroke="currentColor"
        class="size-4 text-grey"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
      </svg>

      <div>{{ product.title }}</div>
    </ol>
  </nav>

  <div class="flex flex-col lg:flex-row">
    {% comment %} Main Image {% endcomment %}
    <div class="lg:w-2/3 flex flex-col items-center">
      <a href="{{ product.featured_image | image_url: width: 1500 }}" data-fancybox="products">
        <img src="{{ product.featured_image | image_url: width: 480 }}" class="max-h-[480px]">
      </a>
      {% comment %}
        Thumbnails
      {% endcomment %}
      {% if product.images.size > 1 %}
        <div class="flex mt-4">
          {% for image in product.images offset: 1 %}
            <a href="{{ image | image_url: width: 1500 }}" data-fancybox="products">
              <img src="{{ image | image_url: width: 150 }}" class="max-h-36 p-4">
            </a>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div class="lg:w-1/3 flex-col">
      <h1 class="text-2xl">{{ product.title }}</h1>

      <div class="text-sm flex  items-center mt-4">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 text-primary">
          <path fill-rule="evenodd"
            d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
            clip-rule="evenodd" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 text-primary">
          <path fill-rule="evenodd"
            d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
            clip-rule="evenodd" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 text-primary">
          <path fill-rule="evenodd"
            d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
            clip-rule="evenodd" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 text-primary">
          <path fill-rule="evenodd"
            d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
            clip-rule="evenodd" />
        </svg>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-5 inline text-grey mr-3"
        >
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
        </svg>
        (
        {%- if product.metafields.reviews.rating_count > 1 -%}
          {{- product.metafields.reviews.rating_count }} reviews
        {%- else %}
          No reviews
        {%- endif -%}
        )
      </div>

      {% if product.description.size > 0 %}
        <p class="text-sm leading-6 text-[#626262] mt-5">
          {{ product.description | strip_html | truncatewords: 30, '...' }}
        </p>
        <a
          onclick="tabSelect('description');document.getElementById('titles').scrollIntoView();"
          class="text-primary underline text-sm cursor-pointer"
          >Read More</a
        >
      {% endif %}
      <div class="line-through text-sm mt-5">{{ product.compare_at_price | money }}</div>
      <div class="text-2xl font-medium ">
        {{ product.price | money }}
        <span class="text-xs">incl. GST</span>
        {% if product.available %}
          <span class="bg-lime-100 ml-4 text-lime-800 text-xs font-semibold px-2.5 py-0.5 rounded"> In Stock</span>
        {% else %}
          <span class="bg-red-100 ml-4 text-red-800 text-xs font-semibold px-2.5 py-0.5 rounded"> Out of Stock</span>
        {% endif %}
      </div>
      {% if product.metafields.custom.tyre_stewardship_fee != blank %}
        <div class="text-xs">
          Price excludes
          <img
            src="https://cdn.shopify.com/s/files/1/0662/9054/8951/files/images.png?v=1729491397"
            style="display:inline-block; vertical-align:middle;"
            alt="Tyrewise"
            height="22px"
            width="60px"
          >
          stewardship fee of $
          {%- if product.metafields.custom.tyre_stewardship_fee == 'T11' -%}
            39.01
          {% elsif product.metafields.custom.tyre_stewardship_fee == 'T2' -%}
            3.83
          {% elsif product.metafields.custom.tyre_stewardship_fee == 'T3' -%}
            7.65
          {% elsif product.metafields.custom.tyre_stewardship_fee == 'T5' -%}
            15.30
          {% elsif product.metafields.custom.tyre_stewardship_fee == 'T6' -%}
            19.88
          {% elsif product.metafields.custom.tyre_stewardship_fee == 'T1' -%}
            2.30
          {% endif %}
          incl. GST per tyre which will be added at checkout.
          <a class="underline" href="https://tyresupplies.co.nz/tsf">Learn more</a>
        </div>
      {% endif %}
      <form method="post" action="/cart/add" data-cart-submit class="mt-5">
        {% comment %} Variants {% endcomment %}
        <div>
          {% if product.variants.size > 1 %}
            <select name="id">
              {% for item in product.variants %}
                <option value="{{item.id}}">{{ item.title }} - {{ item.price | money }}</option>
              {% endfor %}
            </select>
          {% endif %}
        </div>
        <div class="flex flex-row">
          <div class="border-grey border rounded text-sm h-fill flex  mr-2">
            <button class="px-2" type="button" onclick="document.getElementById('quantity').stepDown();">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-4"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14" />
              </svg>
            </button>

            <input
              name="quantity"
              id="quantity"
              class="w-8 text-center h-full outline-none appearance-none"
              type="number"
              min="1"
              step="1"
              value="1"
            >

            <button class="px-2" type="button" onclick="document.getElementById('quantity').stepUp();">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-4"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
              </svg>
            </button>
          </div>

          <button
            type="submit"
            class="px-6 py-4 rounded flex bg-primary hover:bg-secondary hover:text-white transition-all duration-100"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-6 mr-2"
            >
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
            </svg>
            Add to Cart
          </button>
        </div>
        <div class="text-xs text-lime-700">
          Order within XX minutes for FREE delivery on orders over $199, estimated between
          <span class="font-bold underline">Wednesday, 7 Feb</span> and
          <span class="underline font-bold">Thursday, 8 Feb</span>.
        </div>

        {% comment %} TODO trust badges?? {% endcomment %}
      </form>
    </div>
  </div>

  <div>
    <!-- Title -->
    <div class="flex  justify-center text-xl font-bold border-b border-grey mt-8" id="titles">
      <div onclick="tabSelect('description')" id="description-title" class="p-3 cursor-pointer border-b-4">
        Description
      </div>
      <div onclick="tabSelect('specifications')" id="specifications-title" class="p-3 cursor-pointer">
        Specifications
      </div>
      <div onclick="tabSelect('shipping')" id="shipping-title" class="p-3 cursor-pointer">Shipping & Delivery</div>
      <div onclick="tabSelect('reviews')" id="reviews-title" class="p-3 cursor-pointer">Reviews</div>
    </div>
    <!-- Content -->
    <div id="description" class="text-sm py-6">
      {% if product.description.size > 0 %}
        {{ product.description }}
      {% else %}
        Sorry, there is no description available for this product, at this time. Please get in touch with us if you have
        any questions.
      {% endif %}
    </div>
    <div id="specifications" class="text-sm py-6 hidden">
      Vendor: {{ product.vendor -}}
      <br>
      SKU: {{ product.variants.first.sku -}}
      <br>
      Availability: In Stock<br>
      Product Type: {{ product.type -}}
      <br>
    </div>
    <div id="shipping" class="text-sm py-6 hidden">
      <p>
        We normally process your orders on the same day if you place your order before 10am. During busy periods this
        may take an additional 1-2 business days.
      </p>
      <p>
        When at checkout, please select the appropriate shipping option for your address. Delays may occur if you choose
        commercial shipping as a rural or residential address. You can use New Zealand Couriers address checker to find
        the appropriate option at https://nzcouriers.co.nz/tools/check-an-address/.
      </p>
      <p>We are happy to say that we provide FREE shipping on orders over $199.00!</p>
      <br>
      <p>Please see the table below for estimated times and costs:</p>

      <table>
        <thead class="bg-light-grey font-bold">
          <td class="p-2"></td>
          <td class="p-2">Commercial</td>
          <td class="p-2">Residential</td>
          <td class="p-2">Rural</td>
        </thead>
        <tr>
          <td class="p-2 bg-light-grey font-bold">Auckland</td>
          <td class="p-2">$6.50 (Overnight)</td>
          <td class="p-2">$9.00 (Overnight)</td>
          <td class="p-2">$12.00 (2 business days)</td>
        </tr>
        <tr>
          <td class="p-2 bg-light-grey font-bold">North Island</td>
          <td class="p-2">$10.00 (2 business days)</td>
          <td class="p-2">$12.50 (2 business days)</td>
          <td class="p-2">$15.00 (2 business days)</td>
        </tr>
        <tr>
          <td class="p-2 bg-light-grey font-bold">South Island</td>
          <td class="p-2">$12.00 (2 business days)</td>
          <td class="p-2">$14.50 (2 business days)</td>
          <td class="p-2">$17.00 (2 business days)</td>
        </tr>
        <tr>
          <td class="p-2 bg-light-grey font-bold">Order over $199.00</td>
          <td class="p-2">FREE (See times above)</td>
          <td class="p-2">FREE (See times above)</td>
          <td class="p-2">FREE (See times above)</td>
        </tr>
      </table>
      <p>
        While our system doesn't automatically provide tracking numbers, if your product doesn't get to you, we can
        trace your order. Just get in touch!
      </p>
      <p>
        We normally use Freightways to ship your items. Their brands include New Zealand Couriers, PostHaste and Castle
        Parcels.
      </p>
      <p>Please contact us if you have any questions or issues with selecting a shipping method at checkout!</p>
    </div>
    <div id="reviews" class="text-sm py-6 hidden">
      <div
        id="judgeme_product_reviews"
        class="jdgm-widget jdgm-review-widget"
        data-product-title="{{ card_product.title | escape }}"
        data-id="{{ card_product.id }}"
        data-auto-install="false"
      >
        {{ card_product.metafields.judgeme.widget }}
      </div>
    </div>
  </div>
  <div id="product-recommendations"></div>
</main>
<script>
  function getRecomendations(id, type) {
    const productRecommendationsSection = document.querySelector(
        "#product-recommendations"
    );

    fetch(
        window.Shopify.routes.root +
            `recommendations/products?product_id=${id}&limit=4&section_id=product-recommendations&intent=${type}`
    ).then((response) => response.text())
        .then((text) => {
            const html = document.createElement("div");
            html.innerHTML = text;
            const recommendations = html.querySelector(
                "#product-recommendations"
            );
            console.log(recommendations)

            if (recommendations && recommendations.innerHTML.trim().length) {
                productRecommendationsSection.innerHTML =
                    recommendations.innerHTML;
            }
        });
}
  getRecomendations({{product.id}}, "related");
</script>
